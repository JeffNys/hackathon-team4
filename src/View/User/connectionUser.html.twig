{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent()}} Connexion
{% endblock %}

{% block content %}
    <main class="page registration-page">
        <section class="clean-block clean-form dark">
            <div class="container">
                <div class="block-heading">
                    <h2 class="text-info">Login</h2>
                </div>
                <form action="/User/connexion" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input class="form-control item" id="email" name="email" type="email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input class="form-control item" type="password" name="password" id="password">
                    </div>
                    <input class="btn btn-primary btn-block" type="submit" value="Connexion">
                </form>
            </div>
        </section>
    </main>
{% endblock %}
